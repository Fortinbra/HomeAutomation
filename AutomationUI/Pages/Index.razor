@page "/"
@inherits BecauseImClever.AutomationUI.Pages.IndexBase
@if (RoomList == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-6">
            <RadzenGrid ColumnWidth="200px" AllowFiltering="true" AllowPaging="true" PageSize="3" AllowSorting="true" Data="@RoomList">
                <Columns>
                    <RadzenGridColumn Width="100px" TItem="AutomationModels.Room" Property="Id" Title="RoomId" />
                    <RadzenGridColumn Width="200px" TItem="AutomationModels.Room" Property="Name" Title="Name" />
                    <RadzenGridColumn Width="100px" TItem="AutomationModels.Room" Property="Status" Title="Status" />
                </Columns>
            </RadzenGrid>
        </div>
        <div class="col-md-6">
            <RadzenCard Style="margin-bottom:20px">
                @room.Name
            </RadzenCard>
            <RadzenTabs>
                <Tabs>

                </Tabs>
            </RadzenTabs>
        </div>
    </div>
}

<ul>
    @foreach (var room in RoomList)
    {
        @if (room.Status)
        {
            <li><a href="/rooms/@room.Id.ToString()">@room.Name</a></li>
        }
    }
</ul>